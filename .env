# .env
# Configuration for the training script.
# These variables will be loaded into the environment when train.py is run.

# Path to the Hugging Face cache directory to store models and datasets.
HF_HOME="./hf_cache"

# Specify which GPU(s) to make visible to PyTorch. E.g., "0" or "0,1"
CUDA_VISIBLE_DEVICES="0"

# Directory to save model checkpoints.
CHECKPOINT_DIR="checkpoints"

# Directory to save log files.
LOG_DIR="logs"
